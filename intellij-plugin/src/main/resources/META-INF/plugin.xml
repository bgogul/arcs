<idea-plugin>
    <id>com.google.arcs.arcs_gradle_plugin</id>
    <name>Arcs support</name>
    <vendor>Arcs team</vendor>

    <description><![CDATA[Arcs manifest support]]></description>

    <extensions defaultExtensionNs="com.intellij">
      <fileTypeFactory implementation="com.google.arcs.ArcsFileTypeFactory"/>
      <fileType name="Arcs manifest file" implementationClass="com.google.arcs.ArcsFileType"
                  fieldName="INSTANCE" language="Arcs" extensions="arcs"/>
        <lang.parserDefinition language="Arcs" implementationClass="com.google.arcs.ArcsParserDefinition"/>
        <lang.syntaxHighlighterFactory language="Arcs" implementationClass="com.google.arcs.ArcsSyntaxHighlighterFactory"/>
    </extensions>
  <actions>
    <action id="com.google.arcs.dfa.PopupDialogAction" class="com.google.arcs.dfa.PopupDialogAction"
            text="Run Arcs DFA" description="Run DFA on the given files.">
      <add-to-group group-id="EditorPopupMenu" anchor="first"/>
    </action>
  </actions>
</idea-plugin>
